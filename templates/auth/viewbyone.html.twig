{# auth/viewbyone.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}

    <h1> {{title}} </h1>
    <br>
    {% if member is not null %}
        <h2> Membre numéro {{member.id}} </h2>
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">{{ member.name |capitalize  }} {{ member.firstname |capitalize }}</h4>
                    <h6 class="card-subtitle mb-2 text-muted">Nom : {{ member.name |capitalize }}</h6>
                    <h6 class="card-subtitle mb-2 text-muted">Prénom : {{ member.firstname |capitalize }}</h6>
                    <h6 class="card-subtitle mb-2 text-muted">Pseudo : {{ member.username |capitalize }}</h6>
                    <h6 class="card-subtitle mb-2 text-muted">Adresse email : {{ member.email }}</h6>
                    <h6 class="card-subtitle mb-2 text-muted">Password : {{ member.password }}</h6>
                <hr>
                <p class="card-text">Date de création : {{ member.creationDate |date('d-m-Y') }}</p>
                <br>
            </div>
        </div>
        <br>
    {% else %}

        <p> Ce membre n'existe pas ! </p>

    {% endif %}

    <a href="{{ path('admin') }}" class="card-link"> <span class="badge badge-secondary">Merci, je retourne sur la page précédente !</span> </a>

{% endblock %}